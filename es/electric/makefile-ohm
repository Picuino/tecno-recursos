# HELP
#   object: dependencies
#   $@ object
#   $^ dependencies
#   $< first element of dependencies list

IMGDIR=_images
SOURCES=_sources

LIBS=$(wildcard _symbol_lib/*) $(wildcard Licen*)

JOINPDF=gswin32.exe -dBATCH -dNOPAUSE -q -sDEVICE=pdfwrite
PDFTOPNG=pdftopng -gray -r 600 -aa yes -aaVector yes -freetype yes
OPTIPNG=optipng -quiet -o 6
CONVERT=convert
CONVERT_OPT=-fill white -draw "rectangle 0,0 200,160" -transparent White 
MOGRIFY=mogrify
ZIP=7z a
PYTHON=python

define crop_symbol
	$(eval geometry = $(shell python -c "import sys; (x,y)=eval(sys.argv[1]); \
	print('%dx%d+%d+%d'%(1350-140, 2227-1520, x*(1575)+140, y*(2405-1505)+1520))" $(2)))
	$(CONVERT) $(1) -crop $(geometry) +repage \
		$(CONVERT_OPT) $(IMGDIR)/$(strip $(3))
	$(OPTIPNG) $(IMGDIR)/$(strip $(3))
endef

# --------------------------------------------------------------------
# ley de Ohm. Inicio
#
LEY-OHM-INICIO-IMAGES=$(foreach n, 01 02 03 04 05 06 07 08 09 10 \
	11 12 13 14 15 16 17 18, $(IMGDIR)\electric-ley-ohm-$(n).png)

$(IMGDIR)/electric-ley-ohm-inicio-p1.png: electric-ley-ohm-inicio.pdf
	$(PDFTOPNG) $< $(basename $<)
	mv $(basename $<)-000001.png  $(IMGDIR)/$(basename $<)-p1.png
	$(MOGRIFY) -posterize 16  $(IMGDIR)/$(basename $<)-p1.png
	$(OPTIPNG)  $(IMGDIR)/$(basename $<)-p1.png

electric-ley-ohm.zip:  $(LIBS) $(wildcard ley-ohm/*)
	rm -f $@  ley-ohm/*.*bak
	$(ZIP) $@ $^

electric-ley-ohm-%.png: $(IMGDIR)/electric-ley-ohm-inicio-p1.png
	$(call crop_symbol, $<, "( 0, 0)", electric-ley-ohm-01.png)
	$(call crop_symbol, $<, "( 1, 0)", electric-ley-ohm-02.png)
	$(call crop_symbol, $<, "( 2, 0)", electric-ley-ohm-03.png)
	$(call crop_symbol, $<, "( 0, 1)", electric-ley-ohm-04.png)
	$(call crop_symbol, $<, "( 1, 1)", electric-ley-ohm-05.png)
	$(call crop_symbol, $<, "( 2, 1)", electric-ley-ohm-06.png)
	$(call crop_symbol, $<, "( 0, 2)", electric-ley-ohm-07.png)
	$(call crop_symbol, $<, "( 1, 2)", electric-ley-ohm-08.png)
	$(call crop_symbol, $<, "( 2, 2)", electric-ley-ohm-09.png)
	$(call crop_symbol, $<, "( 0, 3)", electric-ley-ohm-10.png)
	$(call crop_symbol, $<, "( 1, 3)", electric-ley-ohm-11.png)
	$(call crop_symbol, $<, "( 2, 3)", electric-ley-ohm-12.png)
	$(call crop_symbol, $<, "( 0, 4)", electric-ley-ohm-13.png)
	$(call crop_symbol, $<, "( 1, 4)", electric-ley-ohm-14.png)
	$(call crop_symbol, $<, "( 2, 4)", electric-ley-ohm-15.png)
	$(call crop_symbol, $<, "( 0, 5)", electric-ley-ohm-16.png)
	$(call crop_symbol, $<, "( 1, 5)", electric-ley-ohm-17.png)
	$(call crop_symbol, $<, "( 2, 5)", electric-ley-ohm-18.png)


.PHONY: all-ley-ohm-inicio  clean-ley-ohm-inicio
all-ley-ohm-inicio: \
	electric-ley-ohm.zip \
	$(IMGDIR)/electric-ley-ohm-inicio-p1.png \
	$(LEY-OHM-INICIO-IMAGES) \

clean-ley-ohm-inicio:
	rm -f $(IMGDIR)/electric-ley-ohm-inicio-p1.png
	rm -f $(LEY-OHM-INICIO-IMAGES)
	rm -f electric-ley-ohm.zip



# --------------------------------------------------------------------
# ley de Ohm con serie y paralelo
#
$(IMGDIR)/electric-ley-ohm-p1.png \
$(IMGDIR)/electric-ley-ohm-p2.png: electric-ley-ohm.pdf
	$(PDFTOPNG) $< $(basename $<)
	mv $(basename $<)-000001.png  $(IMGDIR)/$(basename $<)-p1.png
	mv $(basename $<)-000002.png  $(IMGDIR)/$(basename $<)-p2.png
	$(MOGRIFY) -posterize 16 $(IMGDIR)/$(basename $<)-p1.png
	$(MOGRIFY) -posterize 16 $(IMGDIR)/$(basename $<)-p2.png
	$(OPTIPNG) $(IMGDIR)/$(basename $<)-p1.png
	$(OPTIPNG) $(IMGDIR)/$(basename $<)-p2.png


.PHONY: all-ley-ohm-avanzado  clean-ley-ohm-avanzado
all-ley-ohm-avanzado: \
	$(IMGDIR)/electric-ley-ohm-p1.png \
	$(IMGDIR)/electric-ley-ohm-p2.png \


clean-ley-ohm-avanzado:
	rm -f $(IMGDIR)/electric-ley-ohm-p1.png
	rm -f $(IMGDIR)/electric-ley-ohm-p2.png



# --------------------------------------------------------------------
# make all
#
.PHONY: all clean
all: \
	all-ley-ohm-inicio \
	all-ley-ohm-avanzado \


clean: \
	clean-ley-ohm-inicio \
	clean-ley-ohm-avanzado \
